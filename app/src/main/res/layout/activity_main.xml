<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <EditText
            android:inputType="number"
            android:id="@+id/txtInsert1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:hint="Nhap so dau"
            android:textColor="#1C2AC5"
            android:textSize="18sp">

        </EditText>

        <EditText
            android:inputType="number"
            android:id="@+id/txtInsert2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:hint="Nhap so thu 2"
            android:textColor="#1C2AC5">

        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btnKiemTra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EA2281"
        android:text="Click"
        android:textColor="#97B69B">

    </Button>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#C518E4"
        android:textSize="18sp">

    </TextView>

</LinearLayout>